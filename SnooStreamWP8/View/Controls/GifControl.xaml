<UserControl x:Class="SnooStreamWP8.View.Controls.GifControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ViewportControl x:Name="viewport" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ManipulationStarted="OnManipulationStarted" ManipulationDelta="OnManipulationDelta" 
                             ManipulationCompleted="OnManipulationCompleted" ViewportChanged="viewport_ViewportChanged">
            <Canvas x:Name="canvas">
                <DrawingSurface RenderTransformOrigin="0,0"
                x:Name="image" DoubleTap="viewport_DoubleTap">
                    <DrawingSurface.RenderTransform>
                        <ScaleTransform x:Name="xform"/>
                    </DrawingSurface.RenderTransform>
                </DrawingSurface>
            </Canvas>
        </ViewportControl>
    </Grid>
</UserControl>