<UserControl
    x:Class="SnooStream.View.Controls.ComboBoxOrPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnooStream.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="theControl">

    <Button Content="{Binding Header, ElementName=theControl}">
        <Button.Flyout>
            <ListPickerFlyout ItemsSource="{Binding ItemsSource, ElementName=theControl}" Placement="Full" 
                              SelectedValue="{Binding SelectedValue, Mode=TwoWay, ElementName=theControl}">

            </ListPickerFlyout>
        </Button.Flyout>
    </Button>
</UserControl>
