<UserControl
    x:Class="SnooStream.View.Controls.CommentCountControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnooStream.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock Margin="0,0,0,0" FontSize="36" Text="&#xE200;" FontFamily="Segoe UI Symbol" />
        <TextBlock Margin="1,11,0,0" Text="{Binding Path=CommentCount}" Foreground="{ThemeResource InvertThemeForegroundBrush}" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
