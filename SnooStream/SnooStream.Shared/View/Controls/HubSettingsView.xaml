<UserControl x:Class="SnooStreamWP8.View.Controls.HubSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerikPrimitives="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Primitives"
    xmlns:local="clr-namespace:SnooStreamWP8.View.Controls"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <ScrollViewer>
            <StackPanel Margin="0,0,0,0">
                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8"
                        Tap="Content_Tap">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            CONTENT
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Choose what you see and when you see it
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            LAYOUT
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Change the way the app looks
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8"
                        Tap="LockScreen_Tap">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            LOCK SCREEN
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Customize your reddit lock screen
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            LIVE TILE
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Have the live tile your way
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            OFFLINE DATA
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Decide what gets stored or clear your cache
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8"
                        Visibility="{Binding Settings.AllowAdvertising, Mode=TwoWay, Converter={StaticResource booleanVisibilityConverter}}"
                        Tap="AdFreeUpgrade_Tap">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            DISABLE ADS
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Remove the Ads for good
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SubtextButton}"
                        Margin="0,0,0,-8"
                        IsEnabled="False"
                        Visibility="{Binding Settings.AllowAdvertising, Mode=TwoWay, Converter={StaticResource invertedBooleanVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtextButtonTitleTextBlock}">
                            THANK YOU!
                        </TextBlock>
                        <TextBlock Style="{StaticResource SubtextButtonSubtextTextBlock}">
                            Enjoy your Ad-Free experience
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>