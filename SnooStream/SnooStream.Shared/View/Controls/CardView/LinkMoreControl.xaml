<UserControl
    x:Class="SnooStream.View.Controls.CardView.LinkMoreControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnooStream.View.Controls.CardView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            MinWidth="250" MinHeight="300" Background="{ThemeResource GridViewItemPlaceholderBackgroundThemeBrush}">
            <Border BorderThickness="1">
                <StackPanel Margin="12,12,0,0">
                    <Button BorderThickness="0" Content="Share Link" Command="{Binding Share}" Tapped="After_Tapped"/>
                    <Button BorderThickness="0" Content="Report" Command="{Binding Report}" Tapped="After_Tapped"/>
                    <Button BorderThickness="0" Content="Hide" Command="{Binding Hide}" Tapped="After_Tapped"/>
                    <Button BorderThickness="0" Content="Save" Command="{Binding Save}" Tapped="After_Tapped"/>
                    <Button BorderThickness="0" Content="User Details" Command="{Binding GotoUserDetails}" Tapped="After_Tapped"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
