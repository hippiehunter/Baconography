<UserControl
    x:Class="SnooStream.View.Controls.Content.VideoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnooStream.View.Controls.Content"
    xmlns:controls="using:SnooStream.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mmppf="using:Microsoft.PlayerFramework"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:OverlayControl Height="80" />
        <mmppf:MediaPlayer x:Name="player" x:FieldModifier="public" Grid.Row="1"
                           AutoPlay="False" IsLooping="{Binding IsLooping}"  
                           Source="{Binding BestPlayableUrl}" 
                           IsFullScreen="True" MediaFailed="player_MediaFailed"/>
    </Grid>
</UserControl>
