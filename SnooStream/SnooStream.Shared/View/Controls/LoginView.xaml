<UserControl x:Class="SnooStream.View.Controls.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SnooStream.View.Controls"
    xmlns:common="using:SnooStream.Common"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="579.524" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <ScrollViewer>
            <StackPanel>
                <ContentControl x:Name="header"
                                CharacterSpacing="-10"
                                FontSize="40" FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                                HorizontalAlignment="Left" Margin="12,6,0,24"
                                Content="login">
                    <ContentControl.RenderTransform>
                        <TranslateTransform x:Name="headerTransform"/>
                    </ContentControl.RenderTransform>
                </ContentControl>
                <local:ComboBoxOrPicker Visibility="{Binding HasStoredLogins, Converter={StaticResource booleanVisibilityConverter}}" 
                                  Header="stored logins" 
                                  ItemsSource="{Binding StoredCredentials}"
                                  SelectedItem="{Binding SelectedCredential, Mode=TwoWay}"/>
                
                <TextBox Header="username" Text="{Binding Username, Mode=TwoWay}"/>
                <PasswordBox Header="password" 
                             Password="{Binding Password, Mode=TwoWay}"
                             IsEnabled="{Binding UsingStoredCredential, Converter={StaticResource invertedBooleanConverter}}"/>
                <CheckBox Margin="0,0,0,0" Content="save this login"
                          IsChecked="{Binding IsRememberLogin, Mode=TwoWay}"/>
                <CheckBox Margin="0,0,0,0" Content="login automatically"
                          IsChecked="{Binding IsDefaultLogin, Mode=TwoWay}" />
                <ProgressBar IsIndeterminate="{Binding Working}"
                             Visibility="{Binding Working, Converter={StaticResource booleanVisibilityConverter}}"/>
                <Border Margin="0,20,0,10" Visibility="{Binding HasErrors, Mode=TwoWay, Converter={StaticResource booleanVisibilityConverter}}">
                    <TextBlock Foreground="Red" HorizontalAlignment="Center" Text="Login Failed: incorrect username or password"/>
                </Border>
                <Button Content="login"
                                Visibility="{Binding Working, Converter={StaticResource invertedBooleanVisibilityConverter}}"
                                Command="{Binding DoLogin}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>