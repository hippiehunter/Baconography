<ResourceDictionary
    x:Class="SnooStream.Templates.CommentCountControlTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:SnooStream.ViewModel">

    <DataTemplate x:Key="CommentCountControl" x:DataType="vm:LinkViewModel">
        <Grid>
            <TextBlock Margin="0,0,0,0" FontSize="36" Text="&#xE200;" FontFamily="Segoe UI Symbol" 
                       Foreground="{ThemeResource InvertThemeForegroundBrush}"/>
            <TextBlock Margin="1,13,0,0"
                       FontFamily="Segoe UI"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Text="{x:Bind Path=CommentCount}"
                       HorizontalAlignment="Center"/>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>
